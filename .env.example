# Frontend Configuration Example
# Copy this file to .env and update with your settings

# Server Configuration
HOST=0.0.0.0
PORT=3000

# HTTPS Configuration (Required for camera access)
# Set to true to enable HTTPS, false for HTTP only
HTTPS=true
SSL_CRT_FILE=cert.pem
SSL_KEY_FILE=key.pem

# Backend API URL
# For localhost HTTP: http://localhost:5000
# For localhost HTTPS: https://localhost:7000
# For LAN access HTTPS: https://YOUR_LOCAL_IP:7000 (e.g., https://192.168.0.24:7000)
REACT_APP_API_URL=https://localhost:7000

# SignalR Hub URL (for real-time notifications)
# For localhost HTTPS: https://localhost:7000/hubs
# For LAN access HTTPS: https://YOUR_LOCAL_IP:7000/hubs
REACT_APP_SIGNALR_URL=https://localhost:7000/hubs

# Environment
REACT_APP_ENVIRONMENT=development

# Feature Flags (optional)
# REACT_APP_ENABLE_ANALYTICS=false
# REACT_APP_ENABLE_DEBUG_LOGGING=true

# Application Version (optional)
# REACT_APP_VERSION=1.0.0
